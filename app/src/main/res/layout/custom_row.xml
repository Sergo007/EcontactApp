<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/item_bg"
    android:clickable="true">

    <ImageView

        android:id="@+id/listIcon"
        android:layout_width="@dimen/width_icon_in_item_drawer"
        android:layout_height="@dimen/height_icon_in_item_drawer"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_left_icon_in_item_drawer"
        android:layout_marginRight="@dimen/margin_right_icon_in_item_drawer"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/listText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_left_text_in_item_drawer"
        android:text="fdsfdsafdafdf"
        android:textColor="@color/navigationColor" />
</LinearLayout>