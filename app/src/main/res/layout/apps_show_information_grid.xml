<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="90dp"
    android:layout_height="150dp"
    android:background="@drawable/item_bg"
    android:clickable="true">


    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_apps"
        android:id="@+id/avatar_app"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name_apps"
        android:id="@+id/name_apps"
        android:textColor="#ff000000"
        android:layout_below="@+id/avatar_app"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="author"
        android:id="@+id/name_author"
        android:textColor="#ff000000"
        android:textSize="10dp"
        android:layout_below="@+id/name_apps"
        android:layout_alignLeft="@+id/name_apps"
        android:layout_alignStart="@+id/name_apps" />

    <RatingBar
        android:layout_width="70dp"
        android:layout_height="18dp"
        android:id="@+id/rating_app"
        style="?android:attr/ratingBarStyleSmall"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize="0.1"
        android:layout_below="@+id/name_author"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="price"
        android:id="@+id/price"
        android:textColor="#FF73A620"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/rating_app"
        android:layout_alignStart="@+id/rating_app" />
</RelativeLayout>