<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:clickable="true"
    tools:context=".navigationdrawer.NavigationDrawerFragment">

    <LinearLayout
        android:id="@+id/conteiner"
        android:layout_width="@dimen/width_drawer"
        android:layout_height="@dimen/height_header_drawer"
        android:background="@color/primaryColor">
        <TextView
            android:id="@+id/title_drawer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/colorApp"
            android:textSize="@dimen/text_size_title_drawer"
            android:layout_marginLeft="@dimen/margin_left_text_size_title_drawer"
            android:layout_marginTop="@dimen/margin_left_text_top_title_drawer" />
    </LinearLayout>
   <android.support.v7.widget.RecyclerView
       android:id="@+id/drawerList"
       android:layout_below="@+id/conteiner"
       android:layout_width="wrap_content"
       android:layout_height="@dimen/height_drawer_recycler_view"
       android:layout_marginTop="10dp">

   </android.support.v7.widget.RecyclerView>
    <View
        android:id="@+id/line"
        style="@style/HorizontalLine"
        android:layout_below="@+id/drawerList"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sing_in"
        android:layout_below="@+id/line"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/navigationColor"
        android:layout_marginTop="@dimen/margin_top_text_size_title_drawer"
        android:layout_marginLeft="@dimen/margin_left_text_size_title_drawer"
        android:id="@+id/textView" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/navigationColor"
            android:text="@string/links_string"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:autoLink="web"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp" />

    </RelativeLayout>

</RelativeLayout>
