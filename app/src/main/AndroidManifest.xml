<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="yalantis.ua.econtactapp">

    <application
        android:name="yalantis.ua.econtactapp.EcontactApp"
        android:allowBackup="true"
        android:supportsRtl="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="yalantis.ua.econtactapp.MainActivity"
            android:label="@string/all_issues"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="yalantis.ua.econtactapp.details.TaskDetailsActivity"
            android:label="@string/title_activity_sub">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="yalantis.ua.econtactapp.MainActivity" />
        </activity>

    </application>

</manifest>
